#include "push_swap.h"

t_stack	*lstnew(voiddddddddddddddddd
{
	t_stack	*new;

	if (!(new = (t_stack *)malloc(sizeof(*new))))
		return (NULL);
	if (value == NULL)
		new->value = NULL;
	new->next = NULL;
	new->prev = NULL;
	return (new);
}

void	lstdelone(t_stack **alst, void (*del)(void *, size_t))
{
	del((*alst)->value);
	free(*alst);
	*alst = NULL;
}

void	lstdel(t_stack **alst, void (*del)(void *, size_t))
{
	t_stack	*next;

	while (*alst != NULL)
	{
		next = (*alst)->next;
		lstdelone(alst, del);
		*alst = next;
	}
}

void	lstadd(t_stack **alst, t_stack *new)
{
	if (alst != NULL && new != NULL)
	{
		new->next = *alst;
		*alst = new;
	}
}
